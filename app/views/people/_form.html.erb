    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telephone_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.telephone_field :telephone_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fax_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fax_number, :class => 'text_field' %>
    </div>
  </div>

